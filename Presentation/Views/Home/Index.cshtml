@model IEnumerable<Model.DomainModel.Book>
@using Model.DomainModel;
@using Model.Enum;

@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin: 70px 0;">
    <div class="col-md-3">
        <h2 style="font-family:'Times New Roman', Times, serif; font-style:italic; color: #0182b5;">Categories</h2>
        <ul class="nav nav-pills nav-stacked">
            @foreach (Category item in ViewBag.CategoryNames)
            {
                @*<li><a href="@Url.Action("Index", new { showType = HomeShowType.Category, id = item.CateId })"><span style="margin-right: 3px">●</span> @item.CateName</a></li>*@
                <li>
                    <a href="@Url.RouteUrl("Home", new { controller = "Home", action = "Index", showType = HomeShowType.Category, id = item.CateId })">
                        <span style="margin-right: 3px">●</span> @item.CateName
                    </a>
                </li>
            }
        </ul>
        <h2 style="font-family:'Times New Roman', Times, serif; font-style:italic; color: #0182b5;">Authors</h2>
        <ul class="nav nav-pills nav-stacked">
            @foreach (Author item in ViewBag.AuthorNames)
            {
                <li>
                    <a href="@Url.RouteUrl("Home", new { showType = HomeShowType.Author, id = item.AuthorId })">
                        <span style="margin-right: 3px">●</span> @item.AuthorName
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-3" style="margin: 10px 0">
                    <div class="thumbnail">
                        <img data-src="holder.js/120x180" alt="...">
                        <div class="caption">
                            <h3>@item.Title</h3>
                            <p>by @item.Author.AuthorName</p>
                            <p>@item.Summary</p>
                            <p><a href="#" class="btn btn-primary">Buy</a> $@item.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/holder")